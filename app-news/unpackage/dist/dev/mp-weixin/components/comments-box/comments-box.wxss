.comment-box {
  margin: 15px 0;
}
.comment-box .comment-header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.comment-box .comment-header .comment-portrait {
  width: 30px;
  height: 30px;
}
.comment-box .comment-header .comment-portrait image {
  width: 100%;
  height: 100%;
}
.comment-box .comment-header .comment-info {
  margin-left: 20px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  color: #999;
  font-size: 12px;
  line-height: 1;
}
.comment-box .comment-header .comment-info .comment-info-title {
  margin-bottom: 5px;
  font-size: 14px;
  color: #333;
}
.comment-box .comment-header .comment-info .comment-info-title .reply-text {
  margin: 0 5px;
  font-weight: bold;
  color: #000;
}
.comment-box .comment-content {
  margin-top: 10px;
  font-size: 14px;
  color: #000;
  word-break: break-all;
}
.comment-box .comment-content .comment-cotent-info {
  margin: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.comment-box .comment-content .comment-cotent-info .comment-cotent-info-button {
  padding: 2px 10px;
  font-size: 12px;
  color: #999;
  border-radius: 20px;
  border: 1px #ccc solid;
}
.comment-box .comment-content .comment-content-reply {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 15px 0;
  padding: 0 10px;
  padding-top: 10px;
